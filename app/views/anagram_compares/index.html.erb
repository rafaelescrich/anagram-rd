<div class="jumbotron" style="background-image: url(<%= asset_path 'dubrovink.png' %>)">
  <div class="container">
    <h1 style="color: white; text-shadow: 3px 3px 3px black;">Detect if is an anagram!!</h1>
    <p style="color: white; text-shadow: 3px 3px 3px black;">A Eradicating Fast Men!!</p>
    <p><a href="http://github.com/rafaelescrich/anagram-rd" target="_blank" class="btn btn-primary btn-lg">Github Code</a></p>
  </div>
  <div class="clear"></div>
</div>
<div class="container">
    <div class="col-sm-12">
          <!--panel-->
          <div class="panel panel-primary">
              <!-- Default panel contents -->
              <div class="panel-heading"><h4><strong>List of anagrams</strong></h4></div>
              <div class="panel-body">
                  <!--table-->
                  <table class="table table-condensed table-striped table-responsive">
                      <thead>
                          <tr>
                              <th class="text-left">Original</th>
                              <th class="text-center">Wannabe</th>
                              <th class="text-center">Status</th>
                              <th class="text-right">Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @anagram_compares.each do |anagram_compare| %>
                          <tr>
                              <td class="text-left"><%= anagram_compare.original %></th>
                              <td class="text-center"><%= anagram_compare.wannabe %></th>
                              <td class="text-center"><span class="badge badge-info"><%= anagram_compare.status %></th>
                              <td class="text-right"><%= link_to 'Show', anagram_compare %></td>
                              <td class="text-right"><%= link_to 'Destroy', anagram_compare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
                  <!--end of table-->
                  <%= link_to 'New Anagram compare', new_anagram_compare_path , :class => 'btn btn-success btn-lg btn-block pull-right' %>
              </div>
          </div>
          <!--end of panel-->
      </div>
    </div>
